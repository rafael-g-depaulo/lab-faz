{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "BlogPost"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
